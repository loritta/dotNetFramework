@model VidPlace.Models.Customer
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>

    <li>
        Memebership type: @Model.Membership.Name
    </li>
    @if (Model.BirthDate.HasValue)
    {
        <li>
            Date of birth: @Model.BirthDate.Value.ToShortDateString()
        </li>
    }
</ul>

