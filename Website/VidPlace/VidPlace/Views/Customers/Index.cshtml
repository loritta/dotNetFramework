<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Customer Membership</th>
        </tr>
    </thead>
    @if (!Model.Any())
    {
        <p>There are no customers available.</p>
    }
    else
    {
        <tbody>
            @foreach (var customer in Model)
            {
            <tr>
                <td>
                    @Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.ID }, null)
                </td>
                <td>
                    @customer.Membership.Name
                </td>
            </tr>

            }
        </tbody>
    }

</table> 