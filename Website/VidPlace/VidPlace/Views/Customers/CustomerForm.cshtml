@model VidPlace.ViewModels.CustomerFromViewModel
@{
    ViewBag.Title = "CustomerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>
@using (Html.BeginForm("Save", "Customers"))
{
    @Html.ValidationSummary(true, "Please fix the following errors")
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name, "Customer Name")
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Address)
        @Html.TextBoxFor(m => m.Customer.Address, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.BirthDate)
        @Html.TextBoxFor(m => m.Customer.BirthDate, "{0:dd/MM/yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.BirthDate)
        <!--"{ 0:d MMM yyyy}" --- not working-->
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipID)
        @Html.DropDownListFor(m => m.Customer.MembershipID, new SelectList(
       Model.Memberships, "ID", "Name"), "Please select a membership", new { @class = "form-control" })

    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter) Subscribed To Newsletter
        </label>
    </div>
    @Html.HiddenFor(m => m.Customer.ID)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>


}
@section scripts
    {
    @Scripts.Render("~bundles/jqueryval")
}
