@model  VidPlace.ViewModels.MediaFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Media"))
{
    @Html.ValidationSummary(true, "Please fix the following errors")
    <div class="form-group">
        @Html.LabelFor(m => m.Media.Name, "Media Name")
        @Html.TextBoxFor(m => m.Media.Name, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Media.MediaTypeID)
        @Html.DropDownListFor(m => m.Media.MediaTypeID, new SelectList(
       Model.MediaTypes, "ID","Name"), "Please select a media type", new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Media.GenreID)
        @Html.DropDownListFor(m => m.Media.GenreID, new SelectList(
       Model.MediaTypes, "ID", "Name"), "Please select a Media Genre", new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Media.ReleaseDate)
        @Html.TextBoxFor(m => m.Media.ReleaseDate, "{0:dd/MM/yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Media.ReleaseDate)
        <!--"{ 0:d MMM yyyy}" --- not working-->
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Media.NumberInStock)
        @Html.TextBoxFor(m => m.Media.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Media.NumberInStock)
      
    </div>

   
    @Html.HiddenFor(m => m.Media.ID)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>


}
@section scripts
    {
    @Scripts.Render("~bundles/jqueryval")
}
