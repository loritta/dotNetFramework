@model VidPlace.ViewModels.RenatalsMediaViewModel
@{
    ViewBag.Title = "Rentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*

    This comment Block
*@
@{
    var className = Model.Customers.Count > 2 ? "popular" : null;
}
<h2>
    @Model.Media.Name
</h2>
@if (Model.Customers.Count == 0)
{
    <p>No one has rented this media.No rental records</p>
}
else
{
    <ul class="@className">
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>

}

