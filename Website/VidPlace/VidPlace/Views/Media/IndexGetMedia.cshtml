@model IEnumerable<VidPlace.Models.Media>
@{
    ViewBag.Title = "IndexGetMedia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Media in RottenTomattosRental</h2>

@Html.ActionLink("Add media", "New", "Media", null, new { @class = "btn btn-default" })

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Media</th>  
            <th>Genre</th>
        </tr>
    </thead>
    @if (!Model.Any())
    {
        <p>There is no media available.</p>
    }
    else
    {
        <tbody>
            @foreach (var media in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(media.Name, "Details", "Media", new { id = media.ID }, null)
                    </td>
                    <td>
                        @media.Genre.Name
                    </td>
                </tr>

            }
        </tbody>
    }

</table>

